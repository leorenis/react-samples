{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/validation"],
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "sourceMap": true,
    "explainFiles": true,
    "module": "ES2020",
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  }
}